<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enterprise Business Solutions"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- Company Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ha-Meem Group"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- Employee Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:backgroundTint="#5E35B1"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:backgroundTint="#3949AB"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee"
                    android:backgroundTint="#7E57C2"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- HR Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HR Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:backgroundTint="#00897B"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Product Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnProductCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Category"
                    android:backgroundTint="#E53935"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    android:backgroundTint="#D81B60"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Purchase Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Purchase Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supplier"
                    android:backgroundTint="#F4511E"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnPurchaseOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Purchase Order"
                    android:backgroundTint="#FB8C00"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sales Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sales Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:backgroundTint="#43A047"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnSalesOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sales Order"
                    android:backgroundTint="#7CB342"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>





        <!-- Purchase Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inventory Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnInventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inventory"
                    android:backgroundTint="#D004C9"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
</ScrollView>