<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EmployeeActivity"
    android:background="#f5f5f5">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/backToHomeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#380AA9"
                android:text="Back to Home"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Add a New Employee"
                android:textColor="#B103D0"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/employee_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Employee Code"
                android:inputType="number"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth (yyyy-MM-dd)"
                android:inputType="none"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:focusable="false"/>

            <EditText
                android:id="@+id/hire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hire Date (yyyy-MM-dd)"
                android:inputType="none"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:focusable="false"/>

            <EditText
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salary"
                android:inputType="numberDecimal"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/department_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Department Code"
                android:inputType="number"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/department_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Department Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/designation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Designation Code"
                android:inputType="number"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/designation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Designation Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Status"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#048508"
                android:text="Save"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Edit or Delete an Employee"
                android:textColor="#D50D51"
                android:textSize="22sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2,3,4,5"
                    android:padding="8dp"/>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateFormLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Update Employee"
                android:textColor="#048C09"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/update_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/update_employee_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Employee Code"
                android:inputType="number"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth (yyyy-MM-dd)"
                android:inputType="none"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:focusable="false"/>

            <EditText
                android:id="@+id/update_hire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hire Date (yyyy-MM-dd)"
                android:inputType="none"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:focusable="false"/>

            <EditText
                android:id="@+id/update_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salary"
                android:inputType="numberDecimal"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/update_department_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Department Code"
                android:inputType="number"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_department_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Department Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_designation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Designation Code"
                android:inputType="number"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_designation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Designation Name"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/update_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Status"
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D71609"
                android:text="Update"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>